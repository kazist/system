

<ul class="iconmenu">
    {% if categories|length > 0 %}
        {% for category in categories %}
            <li>

                <a href="{{ web_base~'/admin/'~category.home_link }}" title="{{ category.title }}">
                    <img src="{{ resized_image('applications/' ~ category.alias|capitalize ~ '/assets/images/icon.png') }}">
                </a>
                
                <small>{{ category.title }}</small>
                
            </li>
        {% endfor %}
    {% endif %}
</ul>
<div class="clearfix"></div>